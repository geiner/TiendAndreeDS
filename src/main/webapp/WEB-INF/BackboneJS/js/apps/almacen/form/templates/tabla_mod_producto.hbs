<h2>Modificar datos del producto</h2>
<table class="table table-bordered table-hover" id="table_mod_producto" >
    <thead class="header" style="color: #040404;background-color:#f5f5f5">
    <tr>
        <th>Codigo</th>
        <th>Tipo Producto</th>
        <th>Nombre Producto</th>
        <th>Ver Detalle</th>
    </tr>
    </thead>
    <tbody id="fam_content">
    {{#each items}}
    <tr id="{{codigo}}">
        <td>{{codigo}}</td>
        <td data="{{tipo}}">{{descripcion}}</td>
        <td>{{nombre}}</td>
        <td>
            <button class="btn btn-xs" data="{{porc_precio}}" id="ver_detalle"><span class="glyphicon glyphicon-list-alt"></span></button>
        </td>
    </tr>
    {{else}}
        <td colspan="6">No existen estudios para este Servidor</td>
    {{/each}}
    </tbody>
</table>